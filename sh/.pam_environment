# XDG base directories
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache              OVERRIDE=${XDG_CACHE_HOME}
XDG_CONFIG_DIRS DEFAULT=/etc/xdg                    OVERRIDE=${XDG_CONFIG_DIRS}
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config             OVERRIDE=${XDG_CONFIG_HOME}
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share        OVERRIDE=${XDG_DATA_HOME}
XDG_DATA_DIRS   DEFAULT=/usr/local/share:/usr/share OVERRIDE=${XDG_DATA_DIRS}

# Rust
CARGO_HOME       OVERRIDE=${XDG_DATA_HOME}/cargo
RUSTUP_HOME      OVERRIDE=${XDG_DATA_HOME}/rustup

# Terminfo
TERMINFO         OVERRIDE=${XDG_DATA_HOME}/terminfo
TERMINFO_DIRS    OVERRIDE=${XDG_DATA_HOME}/terminfo:/usr/share/terminfo

# Emacs
EDITOR OVERRIDE="emacsclient --alternate-editor emacs"
VISUAL OVERRIDE=${EDITOR}

# Misc
INPUTRC          OVERRIDE=${XDG_CONFIG_HOME}/readline/inputrc
LESSHISTFILE     OVERRIDE=-

# Paths
PATH    OVERRIDE=@{HOME}/.local/bin:${CARGO_HOME}/bin:${PATH}
MANPATH OVERRIDE=@{HOME}/.local/share/man:${MANPATH}
