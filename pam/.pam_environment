# Path
PATH OVERRIDE=@{HOME}/loc/bin:${PATH}

# XDG base directories
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache	
XDG_CONFIG_DIRS DEFAULT=/etc/xdg
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share
XDG_DATA_DIRS   DEFAULT=/usr/local/share:/usr/share

# Stuff for CLI
EDITOR OVERRIDE=vim
VISUAL OVERRIDE=vim

# Locale
LC_ALL   DEFAULT=en_US.UTF-8
LC_CTYPE DEFAULT=C

# Wayland GUI
MOZ_ENABLE_WAYLAND OVERRIDE=1
QT_QPA_PLATFORM    OVERRIDE=wayland-egl

# Make apps behave with XDG
GNUPGHOME    OVERRIDE=${XDG_DATA_HOME}/gnupg
INPUTRC      OVERRIDE=${XDG_CONFIG_HOME}/readline/inputrc
LESSHISTFILE OVERRIDE=-
ZDOTDIR      OVERRIDE=${XDG_CONFIG_HOME}/zsh

# Ranger
RANGER_LOAD_DEFAULT_RC OVERRIDE=FALSE
