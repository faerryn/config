# Path
PATH OVERRIDE=@{HOME}/.local/bin:${PATH}

# XDG base directories
XDG_CACHE_HOME  DEFAULT=@{HOME}/.cache              OVERRIDE=${XDG_CACHE_HOME}
XDG_CONFIG_DIRS DEFAULT=/etc/xdg                    OVERRIDE=${XDG_CONFIG_DIRS}
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config             OVERRIDE=${XDG_CONFIG_HOME}
XDG_DATA_HOME   DEFAULT=@{HOME}/.local/share        OVERRIDE=${XDG_DATA_HOME}
XDG_DATA_DIRS   DEFAULT=/usr/local/share:/usr/share OVERRIDE=${XDG_DATA_DIRS}

# Stuff for CLI
EDITOR       OVERRIDE=vim
VISUAL       OVERRIDE=vim
LESSHISTFILE OVERRIDE=-

# Locale
LC_ALL DEFAULT=C OVERRIDE=${LC_ALL}

# Wayland GUI
ELM_DISPLAY        OVERRIDE=wl
MOZ_ENABLE_WAYLAND OVERRIDE=1
QT_QPA_PLATFORM    OVERRIDE=wayland-egl

# Make apps behave with XDG
GNUPGHOME         OVERRIDE=${XDG_DATA_HOME}/gnupg
INPUTRC           OVERRIDE=${XDG_CONFIG_HOME}/readline/inputrc
NODE_REPL_HISTORY OVERRIDE=${XDG_DATA_HOME}/node_repl_history
OCTAVE_HISTFILE   OVERRIDE=${XDG_CACHE_HOME}/octave-hsts
ZDOTDIR           OVERRIDE=${XDG_CONFIG_HOME}/zsh
