#!/bin/sh

set -euf

case "$(file -bL --mime-type "${1}")" in
	audio/* | video/*)
		PROGRAM=mpv
		;;
	image/*)
		PROGRAM=sxiv
		;;
	text/*)
		PROGRAM='st nvim'
		;;

	inode/directory)
		PROGRAM=thunar
		;;
	inode/x-empty)
		PROGRAM='st nvim'
		;;

	application/json)
		PROGRAM='st nvim'
		;;
	application/pdf)
		PROGRAM=katarakt
		;;
	application/x-shockwave-flash)
		PROGRAM=ruffle
		;;

	*)
		return 1
		;;
esac

exec ${PROGRAM} "${@}"
