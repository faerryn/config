#!/bin/sh

set -euf

TERMINAL=st
TUI_PROGRAMS="
bash dash fish sh zsh
bluetoothctl iwctl pulsemixer
git
htop top
less
man
nvi nvim vi vim
yes
"

[ -z "${TERM:-}" ] &&
	printf "%s\n" ${TUI_PROGRAMS} |
	grep -qx "$(basename $(readlink -f "$(command -v "${1}")"))" &&
	exec ${TERMINAL} "${@}"

exec "${@}"
