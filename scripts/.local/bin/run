#!/bin/sh

TERMINAL=st
TUI_PROGRAMS="
bash dash fish sh zsh
git
htop
iwctl
less
man
nvi nvim vi vim
pulsemixer
yes
"

CMD="$(command -v "${1}")"

if [ -z "${CMD}" ]; then
	return 1
fi

if [ -z "${TERM}" ] && { for PROGRAM in $(echo "${TUI_PROGRAMS}"); do command -v $PROGRAM; done } | grep -qx "${CMD}"; then
	exec $TERMINAL "${@}"
fi

exec "${@}"
