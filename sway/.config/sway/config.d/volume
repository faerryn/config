bindsym XF86AudioRaiseVolume       exec $scripts/sndio.sh master +8
bindsym Shift+XF86AudioRaiseVolume exec $scripts/sndio.sh master +127
bindsym XF86AudioLowerVolume       exec $scripts/sndio.sh master -8
bindsym Shift+XF86AudioLowerVolume exec $scripts/sndio.sh master -127

mode "volume" {
	bindsym $up    exec $scripts/sndio.sh master +8
	bindsym $right exec $scripts/sndio.sh master +127
	bindsym $down  exec $scripts/sndio.sh master -8
	bindsym $left  exec $scripts/sndio.sh master -127

	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+v mode "volume"

# vim: ft=conf
