bindsym XF86AudioRaiseVolume       exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym Shift+XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ 100%
bindsym XF86AudioLowerVolume       exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Shift+XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ 0%

mode "volume" {
	bindsym $up    exec pactl set-sink-volume @DEFAULT_SINK@ +5%
	bindsym $right exec pactl set-sink-volume @DEFAULT_SINK@ 100%
	bindsym $down  exec pactl set-sink-volume @DEFAULT_SINK@ -5%
	bindsym $left  exec pactl set-sink-volume @DEFAULT_SINK@ 0%

	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+v mode "volume"

# vim: ft=conf
