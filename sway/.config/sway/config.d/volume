bindsym XF86AudioRaiseVolume       exec amixer set Master 5%+
bindsym Shift+XF86AudioRaiseVolume exec amixer set Master 100%
bindsym XF86AudioLowerVolume       exec amixer set Master 5%-
bindsym Shift+XF86AudioLowerVolume exec amixer set Master 0%
bindsym XF86AudioMute              exec amixer set Master toggle

bindsym $mod+v mode "volume"

mode "volume" {
	bindsym $right exec amixer set Master 5%+
	bindsym $up    exec amixer set Master 100%
	bindsym $left  exec amixer set Master 5%-
	bindsym $down  exec amixer set Master 0%
	bindsym Space  exec amixer set Master toggle

	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# vim: ft=conf
