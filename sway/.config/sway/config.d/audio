bindsym XF86AudioRaiseVolume       exec "amixer set Master 5%+;    amixer get Master | sed -n 's/^.*\[\([0-9]\+%\)\].*$/\1/p' | xargs notify-send -c volume"
bindsym Shift+XF86AudioRaiseVolume exec "amixer set Master 100%;   amixer get Master | sed -n 's/^.*\[\([0-9]\+%\)\].*$/\1/p' | xargs notify-send -c volume"
bindsym XF86AudioLowerVolume       exec "amixer set Master 5%-;    amixer get Master | sed -n 's/^.*\[\([0-9]\+%\)\].*$/\1/p' | xargs notify-send -c volume"
bindsym Shift+XF86AudioLowerVolume exec "amixer set Master 0%;     amixer get Master | sed -n 's/^.*\[\([0-9]\+%\)\].*$/\1/p' | xargs notify-send -c volume"
bindsym XF86AudioMute              exec "amixer set Master toggle; amixer get Master | sed -n 's/^.*\[\(off\|on\)\].*$/\1/p'  | xargs notify-send -c volume"

