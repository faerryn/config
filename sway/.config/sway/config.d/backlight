bindsym XF86MonBrightnessUp         exec brightnessctl s +5%
bindsym Shift+XF86MonBrightnessUp   exec brightnessctl s 100%
bindsym XF86MonBrightnessDown       exec brightnessctl s 5%-
bindsym Shift+XF86MonBrightnessDown exec brightnessctl s 0%

mode "backlight" {
	bindsym $up    exec brightnessctl s +5%
	bindsym $right exec brightnessctl s 100%
	bindsym $down  exec brightnessctl s 5%-
	bindsym $left  exec brightnessctl s 0%

	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+b mode "backlight"

# vim: ft=conf
