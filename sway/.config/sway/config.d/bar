#
# Status Bar
#

bar {
	position top

	font pango:monospace 12
	height 24

	colors {
		background         #00000000
		focused_workspace  #00000000 #00000000 #ffffff
		active_workspace   #00000000 #00000000 #cccccc
		inactive_workspace #00000000 #00000000 #888888
	}

	status_command while true; do $scripts/status.sh; sleep 1; done

	gaps 4 8 0 8
}

# vim: ft=conf
