mode "grimshot" {
	# s will capture the focused screen
	# w will capture the focused window
	# a will capture selected area
	bindsym s exec grimshot copy screen, mode "default"
	bindsym w exec grimshot copy active, mode "default"
	bindsym a exec grimshot copy area,   mode "default"

	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+g mode "grimshot"

# vim: ft=conf
